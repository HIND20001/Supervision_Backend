# Port pour l'API REST
PORT=3000

# Port pour le serveur UDP
UDP_PORT=8001

# Répertoire de configuration
CONFIG_DIR=./config

# Configuration de la base de données PostgreSQL
DB_USER=postgres
DB_HOST=localhost
DB_NAME=supervision
DB_PASSWORD=postgres
DB_PORT=5432

# Configuration Kafka
KAFKA_BROKERS=localhost:9092

# Niveau de journalisation (debug, info, warn, error)
LOG_LEVEL=info

# Répertoire pour le stockage des images
STORAGE_DIR=./storage

# Durée de conservation des données (en jours)
DATA_RETENTION_DAYS=30

# Intervalle de nettoyage des fragments (en millisecondes)
FRAGMENT_CLEANUP_INTERVAL=60000

# Délai d'expiration des fragments (en millisecondes)
FRAGMENT_EXPIRATION=30000

# Configuration WebSocket
WS_PORT=3001

